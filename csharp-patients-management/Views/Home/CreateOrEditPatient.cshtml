@{
    ViewData["Title"] = "Create or edit patient";
}

@model Patients

<div class="text-center">
    <h1 class="display-4">Create or edit a patient</h1>
</div>

<div class="d-flex justify-content-center" >
    <form>
        <div class="form-group">
            <label for="">Id</label>
            <input type="" class="form-control" id="" aria-describedby="" placeholder="" asp-for="Id">
        </div>
        <div class="form-group">
            <label for="">Name</label>
            <input type="" class="form-control" id="" aria-describedby="" placeholder="" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="">Surname</label>
            <input type="" class="form-control" id="" aria-describedby="" placeholder="" asp-for="Surname">
        </div>
        <div class="form-group">
            <label for="">Sexe</label>
            <input type="" class="form-control" id="" aria-describedby="" placeholder="" asp-for="Sexe">
        </div>
        <div class="form-group">
            <label for="">Height</label>
            <input type="" class="form-control" id="" aria-describedby="" placeholder="" asp-for="Height">
        </div>
        <div class="form-group">
            <label for="">Weight</label>
            <input type="" class="form-control" id="" aria-describedby="" placeholder="" asp-for="Weight">
        </div>
        <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Index">Submit</button>
    </form>
</div>
