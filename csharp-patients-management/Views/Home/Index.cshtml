@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Manage patients</h1>
</div>

<button><a asp-controller="Home" asp-action="CreateOrEditPatient">Create</a></button>

@model List<Patient>

<table class="table">
    <thead>
        <th>Name</th>
        <th>Surname</th>
        <th>Sexe</th>
        <th>Height</th>
        <th>Weight</th>
    </thead>
    <tbody>
        @foreach(var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Surname</td>
                <td>@patient.Sexe</td>
                <td>@patient.Height</td>
                <td>@patient.Weight</td>
            </tr>
        }
        
    </tbody>
</table>

<div class="row">

    <div class="col-sm-3 m-2">
        <div class="card">
            <div class="card-body">
                <img class="card-img" height="50" width="50" />
                <h5 class="card-title">Onur AKMESE</h5>
            </div>
        </div>
    </div>
</div>